{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "jest"
        ]
    },
    "exclude": [
        "node_modules"
    ],
}